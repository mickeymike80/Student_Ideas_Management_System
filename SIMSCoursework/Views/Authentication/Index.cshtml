@model SIMSCoursework.user

@{
    ViewBag.Title = "Index";
}

<div style="margin-top:50px">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">

            <div class="form-group col-md-offset-3">

                <label for="user_Email" class="control-label col-md-2">Email</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.user_Email, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.user_Email, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group col-md-offset-3">
                <label for="user_Email" class="control-label col-md-2">Password</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.user_Password, new { htmlAttributes = new { @class = "form-control", type="password" } })
                    @Html.ValidationMessageFor(model => model.user_Password, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group col-md-offset-3">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Login" class="btn btn-default" />
                </div>
            </div>
        </div>

        <div class="col-md-offset-3">
            <p> @ViewBag.message </p>
        </div>

    }

</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
